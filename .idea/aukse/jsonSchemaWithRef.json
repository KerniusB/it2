{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "patientData": {
      "type": "object",
      "properties": {
        "PatientID": {
          "type": "string"
        },
        "Name": {
          "allOf": [
            {
              "type": "string"
            }
          ]
        },
        "LastName": {
          "type": "string"
        },
        "Weight": {
          "type": "object",
          "properties": {
            "unit": {
              "type": "string"
            },
            "#text": {
              "type": "string"
            }
          },
          "required": [
            "unit",
            "#text"
          ]
        },
        "Address": {
          "type": "string"
        },
        "PhoneNumber": {
          "anyOf": [
            {
              "type": "string",
              "maxLength": 12,
              "pattern": "^[+]{1}[0-9]{11}$"
            },
            {
              "type": "number",
              "minimum": 0
            }
          ]
        },
        "BirthDate": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "AttendedDoctor": {
          "type": "object",
          "properties": {
            "ref": {
              "type": "string"
            }
          },
          "oneOf": [
            {
              "required": [
                "ref"
              ]
            }
          ]
        }
      },
      "required": [
        "PatientID",
        "Name",
        "LastName",
        "Weight",
        "Address",
        "PhoneNumber",
        "BirthDate",
        "AttendedDoctor"
      ]
    }
  },
  "type": "object",
  "properties": {
    "Staff": {
      "type": "object",
      "properties": {
        "Doctors": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "Specialty": {
                  "type": "string",
                  "enum": [
                    "Oncology",
                    "Cardiology"
                  ]
                },
                "id": {
                  "type": "string"
                },
                "Name": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 20
                },
                "LastName": {
                  "type": "string"
                },
                "Address": {
                  "type": "string"
                },
                "PhoneNumber": {
                  "type": "string"
                },
                "BirthDate": {
                  "type": "string"
                },
                "Height": {
                  "type": "object",
                  "properties": {
                    "unit": {
                      "type": "string"
                    },
                    "#text": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "unit",
                    "#text"
                  ]
                }
              },
              "required": [
                "Specialty",
                "id",
                "Name",
                "LastName",
                "Address",
                "PhoneNumber",
                "BirthDate",
                "Height"
              ]
            },
            {
              "type": "object",
              "properties": {
                "Specialty": {
                  "type": "string",
                  "enum": [
                    "Oncology",
                    "Cardiology"
                  ]
                },
                "id": {
                  "type": "string"
                },
                "Name": {
                  "type": "string"
                },
                "LastName": {
                  "type": "string"
                },
                "Address": {
                  "type": "string"
                },
                "PhoneNumber": {
                  "type": "string"
                },
                "BirthDate": {
                  "type": "string"
                },
                "Height": {
                  "type": "object",
                  "properties": {
                    "unit": {
                      "type": "string"
                    },
                    "#text": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "unit",
                    "#text"
                  ]
                }
              },
              "required": [
                "Specialty",
                "id",
                "Name",
                "LastName",
                "Address",
                "PhoneNumber",
                "BirthDate",
                "Height"
              ]
            }
          ]
        },
        "Nurses": {
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "WorksIn": {
                  "type": "string"
                },
                "Name": {
                  "type": "string"
                },
                "LastName": {
                  "type": "string"
                },
                "Address": {
                  "type": "string"
                },
                "PhoneNumber": {
                  "type": "string"
                },
                "BirthDate": {
                  "type": "string"
                },
                "Height": {
                  "type": "object",
                  "properties": {
                    "unit": {
                      "type": "string"
                    },
                    "#text": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "unit",
                    "#text"
                  ]
                }
              },
              "required": [
                "WorksIn",
                "Name",
                "LastName",
                "Address",
                "PhoneNumber",
                "BirthDate",
                "Height"
              ]
            },
            {
              "type": "object",
              "properties": {
                "WorksIn": {
                  "type": "string"
                },
                "Name": {
