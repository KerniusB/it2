                  ]
                }
              },
              "required": [
                "WorksIn",
                "Name",
                "LastName",
                "Address",
                "PhoneNumber",
                "BirthDate",
                "Height"
              ]
            }
          ]
        }
      },
      "required": [
        "Doctors",
        "Nurses"
      ]
    },
    "Patients": {
      "type": "object",
      "properties": {
        "Patient": {
          "$ref": "#/definitions/patientData"
        }
      },
      "required": [
        "Patient"
      ]
    }
  },
  "required": [
    "Staff",
    "Patients"
  ]
}